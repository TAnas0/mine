---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

import { profile } from "@/settings";
import { publications } from "@/data/cv";
import Hero from "../components/ui/Hero.astro";
import HeroIllustrationArchitect from "../components/ui/HeroIllustrationArchitect";
import HeroIllustrationAlchemist from "../components/ui/HeroIllustrationAlchemist";
import Grid from "../components/ui/Grid.astro";
import ArticleList from "../components/ui/ArticleList.astro";
import ProfilePictures from "@/assets/elfowl.png";

const { fullName, title, institute } = profile;

const posts = (await getCollection("blog")).sort(
	(a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
);
---

<Layout>
	<Hero
		fullName={fullName}
		title={title}
		institute={institute}
		profilePicture={ProfilePictures}
	/>
	<HeroIllustrationArchitect />
	<HeroIllustrationAlchemist />

	<!-- Research Areas -->
	<!-- <section class='py-12 border-b'>
		<Grid gridTitle='Research Areas' gridItems={research_areas} />
	</section> -->

	<!-- Recent Publications -->
	<section class="py-12 border-t">
		<ArticleList listTitle="Recent Blog Posts" listItems={publications} />
	</section>
</Layout>
